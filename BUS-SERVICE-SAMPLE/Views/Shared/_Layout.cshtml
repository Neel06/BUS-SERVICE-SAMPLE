<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bus Pass Service</title>
    <!-- Bootstrap 5 CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Bus Pass Service</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    @if (string.IsNullOrEmpty(Context.Session.GetString("StudentID"))
                    && string.IsNullOrEmpty(Context.Session.GetString("AdminID")))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Student/Login">Student Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Login">Admin Login</a>
                        </li>
                    }
                    @if (!string.IsNullOrEmpty(Context.Session.GetString("StudentID")))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Student/Logout">Log out</a>
                        </li>
                    }
                    @if (!string.IsNullOrEmpty(Context.Session.GetString("AdminID")))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/Logout">Log out</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer-class bg-dark text-white text-center py-3 mt-4 " style="position:fixed;bottom:0.2%;width:-webkit-fill-available">
        <p>&copy; 2024 Bus Pass Service</p>
    </footer>

    <!-- Bootstrap 5 JS and Popper.js CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
